    <form class="chat-input-pill glass-container" id="chat-form" autocomplete="off">
      <div class="chat-input-inner">
        <textarea
          class="chat-text-input"
          id="chat-input"
          rows="1"
          wrap="soft"
          inputmode="text"
          autocomplete="off"
          autocapitalize="sentences"
          placeholder="Écrire un message…"
        ></textarea>

        <button class="chat-upload-btn" id="chat-upload" type="button" aria-label="Joindre un fichier" title="Joindre un fichier">
          <i class="fas fa-plus"></i>
        </button>

        <button class="chat-send-btn" id="chat-send" type="submit" aria-label="Envoyer" title="Envoyer" disabled>
          <i class="fas fa-arrow-right"></i>
        </button>
      </div>
    </form>

    <input id="chat-file" type="file" accept="image/*" hidden />
  </div>

  <script>
    const chatFile = document.getElementById('chat-file');
    const chatUpload = document.getElementById('chat-upload');

    const chatInput = document.getElementById('chat-input');
    const chatForm = document.getElementById('chat-form');
    const chatSend = document.getElementById('chat-send');
    const scrollBtn = document.getElementById('scroll-to-bottom');

    document.getElementById('share-icon').addEventListener('click', () => console.log('Partager le contenu'));
    document.getElementById('plus-icon').addEventListener('click', () => console.log('Ajouter du contenu'));

    chatUpload.addEventListener('click', () => chatFile.click());
    chatFile.addEventListener('change', () => {
      const file = chatFile.files && chatFile.files[0];
      if (file) console.log('Fichier sélectionné :', file.name);
      chatFile.value = '';
    });

    function updateSendState() {
      const hasText = (chatInput.value || '').trim().length > 0;
      chatSend.disabled = !hasText;
      chatSend.classList.toggle('is-active', hasText);
    }

    function autoResizeTextarea() {
      const styles = getComputedStyle(chatInput);
      const maxH = parseInt(styles.maxHeight || '120', 10);

      chatInput.style.height = 'auto';
      void chatInput.offsetHeight; // force reflow

      let next = chatInput.scrollHeight;
      if (!next || next < 20) next = 20;

      next = Math.min(next, maxH);
      chatInput.style.height = next + 'px';

      const lineH = parseInt(styles.lineHeight || '20', 10);
      const isMultiline = next > (lineH * 1.6);
      chatForm.classList.toggle('is-multiline', isMultiline);
    }

    function onAnyTextChange() {
      updateSendState();
      autoResizeTextarea();
    }

    chatInput.addEventListener('input', onAnyTextChange);
    chatInput.addEventListener('compositionend', onAnyTextChange);

    chatInput.addEventListener('focus', () => {
      requestAnimationFrame(() => {
        autoResizeTextarea();
        requestAnimationFrame(autoResizeTextarea);
      });
      updateSendState();
    });

    onAnyTextChange();

    chatInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        if (!chatSend.disabled) chatForm.requestSubmit();
      }
    });

    chatForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const msg = (chatInput.value || '').trim();
      if (!msg) return;

      console.log('Message envoyé :', msg);

      chatInput.value = '';
      onAnyTextChange();
    });

    function updateKeyboardOffset() {
      if (!window.visualViewport) return;
      const vv = window.visualViewport;
      const offset = Math.max(0, (window.innerHeight - vv.height - vv.offsetTop));
      document.documentElement.style.setProperty('--kb-offset', offset + 'px');

      requestAnimationFrame(() => {
        autoResizeTextarea();
        requestAnimationFrame(autoResizeTextarea);
      });
    }

    if (window.visualViewport) {
      window.visualViewport.addEventListener('resize', updateKeyboardOffset);
      window.visualViewport.addEventListener('scroll', updateKeyboardOffset);
      updateKeyboardOffset();
    }

    function isNearBottom(pixels = 180) {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop || 0;
      const viewportH = window.innerHeight || document.documentElement.clientHeight || 0;
      const docH = Math.max(
        document.body.scrollHeight,
        document.documentElement.scrollHeight,
        document.body.offsetHeight,
        document.documentElement.offsetHeight
      );
      return (scrollTop + viewportH) >= (docH - pixels);
    }
    function updateScrollButton() {
      scrollBtn.classList.toggle('show', !isNearBottom());
    }
    scrollBtn.addEventListener('click', () => {
      window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
    });
    window.addEventListener('scroll', updateScrollButton, { passive: true });
    window.addEventListener('resize', updateScrollButton);
    updateScrollButton();
  </script>
</body>
</html>
